<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_home"
    tools:context="com.example.wargame_v2.Activities.Activity_Home">

    <TextView
        android:id="@+id/home_TV_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="WAR GAME"
        android:textColor="#FFEB3B"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/home_BTN_newGame"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="START GAME"
        android:textColor="#DEE3E2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/home_TV_title"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/home_BTN_rank"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="RANK"
        android:textColor="#DEE3E2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/home_BTN_newGame"
        android:background="@drawable/rounded_button"/>

</RelativeLayout>